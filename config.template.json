{
    "logging":          false,
    "production":       false,
    "authentication":   true,
    "localwebserver": {
        "port":      9000,
        "ipAddress": "127.0.0.1"
    },
    "alerting": {
        "token":        "xxx",
        "host":         "http://127.0.0.1",
        "port":         5000,
        "path":         "/alerting/subscriptions",
        "authEmail":    "xxx@xxx.co.za",
        "appId": "xxx"
    },
    "mongodb": {
        "url":      "xxx",
        "database": "xxx"
    },
    "LOG4JS": {
        "appenders": [
            {
                "layout": {
                    "type":     "pattern",
                    "pattern":  "%m"
                },
                "type":     "console",
                "category": "app"
            }, {
                "layout": {
                    "type":    "pattern",
                    "pattern": "%d{dd/MM hh:mm} %-5p %m"
                },
                "type":       "file",
                "backups":    10,
                "category":   "file-appender",
                "absolute":   true,
                "filename":   "./logs/auth.log",
                "maxLogSize": 102400
            }
        ],
        "replaceConsole": false
    },
    "smtpConfig": {
        "tls": {
            "rejectUnauthorized": false
        },
        "host":                 "xxx",
        "port":                 80,
        "secure":               false,
        "connectionTimeout":    10000
    }
}
