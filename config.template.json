{
    "port": 9000,
    "production": true,
    "authentication": true,
    "client": {
        "auth": "https://auth.bitid.co.za",
        "appId": "000000000000000000000001",
        "drive": "https://drive.bitid.co.za",
        "appName": "Auth",
        "scopes": [
            "/drive/files/upload",
            
            "/auth/changepassword",
            
            "/users/get",
            "/users/list",
            "/users/update",
            "/users/delete",
            
            "/scopes/add",
            "/scopes/get",
            "/scopes/list",
            "/scopes/update",
            "/scopes/delete",
            
            "/apps/add",
            "/apps/get",
            "/apps/list",
            "/apps/share",
            "/apps/update",
            "/apps/delete",
            "/apps/unsubscribe",
            "/apps/updatesubscriber",
            
            "/tokens/get",
            "/tokens/list",
            "/tokens/share",
            "/tokens/update",
            "/tokens/revoke",
            "/tokens/retrieve",
            "/tokens/generate",
            "/tokens/unsubscribe",
            "/tokens/updatesubscriber",

            "/features/add",
            "/features/get",
            "/features/list",
            "/features/update",
            "/features/delete"
        ]
    },
    "mongodb": {
        "url": "xxx",
        "database": "xxx"
    },
    "logger": {
        "appenders": {
            "auth": {
                "type": "file",
                "backups": 10,
                "filename": "./logs/auth.log",
                "absolute": true,
                "maxLogSize": 102400
            }
        },
        "categories": {
            "default": {
                "appenders": [
                    "auth"
                ],
                "level": "error"
            }
        }
    },
    "smtp": {
        "tls": {
            "rejectUnauthorized": false
        },
        "host": "xxx",
        "port": 80,
        "secure": false,
        "connectionTimeout": 10000
    }
